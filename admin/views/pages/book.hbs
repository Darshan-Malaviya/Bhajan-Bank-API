<div class="card">
    <div class="card-body">

        <div class="row" style="margin-left: 1%;">
            <a href="/admin/book/create" class="btn btn-primary" id="addbtn" data-toggle="tooltip" title="Add New Book">
                <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
            <a class="btn btn-danger" href="/admin/book/delete/{{id}}" id="bulkdeletebtn" data-toggle="tooltip"
                title="Select Multiple Data and Delete at once." style="margin-left: 5px;">
                Delete Selected
            </a>
        </div>

        <div class="table-responsive">
            <table id="zero_config" class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center">
                            <div class="custom-checkbox custom-control">
                                <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                    class="custom-control-input" id="checkbox-all">
                                <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                            </div>
                        </th>
                        <th>Title</th>
                        <th>created At</th>
                        <th class="text-right">Cover Image</th>
                        <th class="text-right">Actions</th>
                    </tr>

                </thead>
                <tbody>
                    {{#each books}}
                    <tr id="{{this._id}}">
                        <td class="text-center">
                            <div class="custom-checkbox custom-control">
                                <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input"
                                    id="checkbox-{{row.id}}" value="{{row.id}}">
                                <label for="checkbox-{{row.id}}" class="custom-control-label">&nbsp;</label>
                            </div>
                        </td>
                        <td>{{this.title}}</td>
                        <td>{{this.createdDate}}</td>

                        <td class="text-right">
                            <button class="btn btn-warning a-btn-slide-text modal-view-btn" data-image="{{this.image}} "
                                data-book="{{this.title}}"><i class="fas fa-eye-slash" aria-hidden="true"></i></button>

                            <a href="{{this.image}}" class="btn btn-info a-btn-slide-text download-btn" download>
                                <span><i class="fa fa-download" aria-hidden="true"></i></span>
                            </a>
                        </td>
                        <td class="text-right">
                            <div class="call-chat">
                                <a href="/admin/book/update/{{this._id}}"
                                    class="btn btn-success a-btn-slide-text btn-success">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button data-href="/admin/book/delete/{{this._id}}"
                                    class="btn btn-danger a-btn-slide-text btn-danger deletebtn">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>